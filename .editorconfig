# http://editorconfig.org

root = true

[*]
charset = utf-8
indent_size = 4
indent_style = space
insert_final_newline = true
end_of_line = lf
trim_trailing_whitespace = true

# Docstrings and comments use max_line_length = 79
[*.py]
max_line_length = 119

# Makefile always use tabs for indentation
[Makefile]
indent_style = tab

[*.{yaml,yml,md}]
indent_size = 2

